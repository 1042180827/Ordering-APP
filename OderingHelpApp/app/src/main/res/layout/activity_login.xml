<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>


	<ImageView
		android:id="@+id/imageView2"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:alpha="0.5"
		android:scaleType="fitXY"
		android:src="@mipmap/ab" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textView12"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="28dp"
			android:textStyle="bold"
			android:gravity="center"
			android:layout_marginTop="100dp"
			android:text="Order System" />





		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:background="@drawable/radius_layout_shape_25"
			android:layout_marginLeft="40dp"
			android:layout_marginRight="40dp"
			android:layout_marginTop="80dp"
			android:paddingTop="10dp"
			android:paddingRight="20dp"
			android:paddingBottom="10dp"
			android:paddingLeft="20dp"
			android:gravity="center"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/imageView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/login_user_img" />
			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="@color/line_a"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"/>

			<EditText
				android:id="@+id/login_account"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:ems="10"
				android:background="@null"
				android:textSize="16dp"
				android:hint="Please enter phone number"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:background="@drawable/radius_layout_shape_25"
			android:layout_marginLeft="40dp"
			android:layout_marginRight="40dp"
			android:layout_marginTop="15dp"
			android:paddingTop="10dp"
			android:paddingRight="20dp"
			android:paddingBottom="10dp"
			android:paddingLeft="20dp"
			android:gravity="center"
			android:orientation="horizontal">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/login_password_img" />
			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="@color/line_a"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"/>

			<EditText
				android:id="@+id/login_password"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:ems="10"
				android:inputType="textPassword"
				android:background="@null"
				android:textSize="16dp"
				android:hint="Please enter the password"
				/>
		</LinearLayout>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="35dp"
			android:orientation="horizontal"
			>
			<TextView
				android:id="@+id/btn_login"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="45dp"
				android:textSize="16dp"
				android:layout_marginLeft="40dp"
				android:layout_marginRight="40dp"
				android:layout_marginTop="35dp"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/shape_25_pre"
				android:gravity="center"
				android:text="login" />

			<TextView
				android:id="@+id/tv_register"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="45dp"
				android:textSize="16dp"
				android:layout_marginStart="20dp"
				android:layout_marginEnd="40dp"
				android:layout_marginTop="35dp"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/shape_25_pre"
				android:gravity="center"
				android:text="register" />

		</LinearLayout>


	</LinearLayout>



</RelativeLayout>
